<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Balance Display</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Navbar -->
  <nav class="bg-[#6C8CA0] p-4">
    <div class="max-w-screen-xl mx-auto flex justify-between items-center">
      <a href="#" class="text-white text-2xl font-bold">Brand</a>
      <div class="hidden md:flex space-x-6">
        <a href="#" class="text-white text-lg hover:text-red-300 transition">Home</a>
        <a href="#" class="text-white text-lg hover:text-red-300 transition">About</a>
        <a href="#" class="text-white text-lg hover:text-red-300 transition">Services</a>
        <a href="#" class="text-white text-lg hover:text-red-300 transition">Contact</a>
      </div>
      <button id="menuToggle" class="md:hidden text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-screen-xl mx-auto p-8 flex flex-col lg:flex-row gap-6">
    <!-- Sidebar -->
    <aside class="w-full lg:w-1/4 bg-white shadow-lg rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Select Options</h2>
      <ul class="space-y-4">
        <li class="flex items-center">
          <input type="checkbox" id="option1" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="20">
          <label for="option1" class="text-gray-700">Water & Electricity</label>
        </li>
        <li class="flex items-center">
          <input type="checkbox" id="option2" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="15">
          <label for="option2" class="text-gray-700">Food</label>
        </li>
        <li class="flex items-center">
          <input type="checkbox" id="option3" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="10">
          <label for="option3" class="text-gray-700">Transportation</label>
        </li>
        <li class="flex items-center">
          <input type="checkbox" id="option4" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="25">
          <label for="option4" class="text-gray-700">Education</label>
        </li>
        <li class="flex items-center">
          <input type="checkbox" id="option5" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="10">
          <label for="option5" class="text-gray-700">Entertainment</label>
        </li>
        <li class="flex items-center">
          <input type="checkbox" id="option6" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="5">
          <label for="option6" class="text-gray-700">Subscriptions</label>
        </li>
        <li class="flex items-center">
          <input type="checkbox" id="option7" class="mr-3 h-5 w-5 text-red-500 focus:ring-red-400 border-gray-300 rounded" data-salary="8">
          <label for="option7" class="text-gray-700">Saving</label>
        </li>
      </ul>
    </aside>

    <div class="flex-1">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
        <!-- Current Balance -->
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <h2 class="text-xl font-semibold text-gray-800">Current Balance</h2>
          <p class="text-5xl font-bold text-green-600 mt-4" id="currentBalance">100 $</p>
        </div>
        <!-- Balance after Management -->
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <h2 class="text-xl font-semibold text-gray-800">Balance after Management</h2>
          <p class="text-5xl font-bold text-green-600 mt-4" id="updatedBalance">12 $</p>
        </div>
      </div>

      <!-- Add Current Amount Form -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Add Current Amount or Salary</h2>
        <form method="post" action="/">
          <div class="mb-6">
            <label for="amount" class="block text-gray-600 mb-2">Enter Amount:</label>
            <input type="number" name="amount" id="amount" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400" placeholder="Enter amount" required>
          </div>
          <button type="submit" class="w-full py-2 bg-[#6C8CA0] text-white font-semibold rounded-lg hover:bg-red-600 transition">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-[#6C8CA0] text-white text-center py-4">
    <p class="text-sm">&copy; 2024 Brand. All rights reserved.</p>
  </footer>

  <!-- JavaScript for Mobile Menu and Salary Calculation -->
  <script>
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    const updatedBalance = document.getElementById('updatedBalance');
    const currentBalance = document.getElementById('currentBalance');
    let baseSalary = 100;  // Example base salary

    // Function to update balance based on selected checkboxes
    function updateBalance() {
      let totalSalary = baseSalary;
      checkboxes.forEach(checkbox => {
        if (checkbox.checked) {
          totalSalary += parseInt(checkbox.getAttribute('data-salary'));
        }
      });
      updatedBalance.textContent = `${totalSalary} $`;
    }

    // Event listener for checkbox change
    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateBalance);
    });

    // Initialize with the correct balance
    updateBalance();
  </script>
</body>
</html>
