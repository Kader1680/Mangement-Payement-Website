<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white flex items-center justify-center h-screen">

  <!-- Main Container -->
  <div class="w-full max-w-md mx-auto bg-white shadow-lg rounded-lg border border-gray-300">

  

    <!-- Login Form -->
    <div id="loginForm" class="p-8">
      <h2 class="text-2xl font-semibold text-center text-green-600 mb-6">Login</h2>
      <form action="#" method="POST">
        <div class="mb-4">
          <label for="email" class="block text-sm text-gray-600">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-green-500" required>
        </div>

        <div class="mb-4">
          <label for="password" class="block text-sm text-gray-600">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-green-500" required>
        </div>

        <div class="flex justify-between items-center">
          <button type="submit" class="w-full py-3 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 focus:outline-none">Login</button>
        </div>

        <div class="text-center mt-4">
          <p class="text-sm text-gray-500">Don't have an account? <a href="/register" id="switchToRegister" class="text-red-500">Register</a></p>
        </div>
      </form>
    </div>

    <!-- Register Form -->
    <div id="registerForm" class="p-8 hidden">
      <h2 class="text-2xl font-semibold text-center text-green-600 mb-6">Register</h2>
      <form action="#" method="POST">
        <div class="mb-4">
          <label for="regEmail" class="block text-sm text-gray-600">Email</label>
          <input type="email" id="regEmail" name="email" placeholder="Enter your email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-green-500" required>
        </div>

        <div class="mb-4">
          <label for="regPassword" class="block text-sm text-gray-600">Password</label>
          <input type="password" id="regPassword" name="password" placeholder="Enter your password" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-green-500" required>
        </div>

        <div class="mb-4">
          <label for="confirmPassword" class="block text-sm text-gray-600">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirm_password" placeholder="Confirm your password" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-green-500" required>
        </div>

        <div class="flex justify-between items-center">
          <button type="submit" class="w-full py-3 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 focus:outline-none">Register</button>
        </div>

        <div class="text-center mt-4">
          <p class="text-sm text-gray-500">Already have an account? <a href="javascript:void(0);" id="switchToLogin" class="text-red-500">Login</a></p>
        </div>
      </form>
    </div>

  </div>


</body>
</html>
